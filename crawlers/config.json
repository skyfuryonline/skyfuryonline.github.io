{
  "global_settings": {
    "days_to_keep": 15
  },
  "sites": [
    {
      "parser": "GoogleDevBlogCrawler",
      "url": "https://blog.google/technology/developers/",
      "top_k": 2,
      "llm_profile": "default_summary",
      "enabled": true
    },
    {
      "parser": "GoogleResearchBlogCrawler",
      "url": "https://blog.google/technology/research/",
      "top_k": 2,
      "llm_profile": "default_summary",
      "enabled": true
    },
    {
      "parser": "GoogleDeepmindBlogCrawler",
